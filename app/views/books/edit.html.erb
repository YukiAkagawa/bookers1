<h2>Editing Book</h2>

<% if @book.errors.any? %>
 <%= @book.errors.count %> errors prohibited this book from being saved:
 <% @book.errors.full_messages.each do |message| %>
  <%= message %>
 <% end %>
<% end %>

<%= form_with model:@book,url:"/books/#{@book.id}",local:true do |book| %>
  <p>Title</p>
  <%= book.text_field :title %>
  <p>Body</p>
  <%= book.text_area :body %>
  <%= book.submit "Update Book" %>
<% end %>
<%= link_to "Show",book_path(@book)%>
<%= link_to "Back","/books"%>